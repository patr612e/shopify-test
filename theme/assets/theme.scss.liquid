/* Imports */
@import url("https://fonts.googleapis.com/css2?family=Cardo:wght@400;700&family=Lato:wght@400;700&display=swap");

/* Fonts */
$font-header: Cardo, "Helvetica Neue", Helvetica, sans-serif;
$font-body: Lato, "Helvetica Neue", Helvetica, sans-serif;

/* Colours */
$colour-primary: #2e3b47;
$colour-grey: #ccc;
$colour-white: #fff;

/* General */
* {
  box-sizing: border-box;
}

html,
body {
  margin: 0;
  padding: 0;
}

html {
  font-size: 62.5%;
}

body {
  font-family: $font-body;
  color: $colour-primary;
  font-weight: 400;
  font-size: 1.4rem;
}

/* Typography */
a,
a:active,
a:hover,
a:visited {
  text-decoration: none;
}

h1,
h2,
h3,
h4,
h5,
h6 {
  font-family: $font-header;
  font-weight: normal;
  line-height: 1.25;
  color: $colour-primary;
  display: inline-block;
  margin: 0 0 10px;
  width: 100%;
}

img,
picture {
  display: inline-block;
  vertical-align: middle;
  max-width: 100%;
  width: 100%;
  height: auto;
}

/* Containers */
.main {
}

.container {
  position: relative;
  max-width: 1920px;
  width: 100%;
  margin: 0 auto;
}

.section {
  position: relative;
  box-sizing: border-box;
  display: block;
  width: 100%;
}

/* Mini cart */
.miniCart {
  position: fixed;
  top: 0;
  right: 0;
  padding: 10px;
  display: block;
  border-left: 1px solid $colour-grey;
  border-bottom: 1px solid $colour-grey;
  background-color: $colour-white;
  z-index: 1;

  @media (min-width: 768px) {
    padding: 20px;
  }
}

.miniCart_icon,
.miniCart_count {
  display: inline-block;
  vertical-align: middle;
}

.miniCart_icon {
  max-height: 17px;
  height: 100%;
  width: auto;

  @media (min-width: 768px) {
    max-height: 30px;
  }
}

.miniCart_count {
  font-size: 1.2rem;
  margin-left: 5px;

  @media (min-width: 768px) {
    font-size: 1.6rem;
  }
}

/* Collection hero */
.collectionHero {
  position: relative;
}

.collectionHero h2 {
  color: #fff;
  position: absolute;

  top: 35%;
  left: 38%;
  z-index: 10;
}

/* Product List */
.productsList {
  max-width: 1080px;
  margin: 0 auto;
}

.collection-products-container {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  row-gap: 20px;
}

/* Product Card */
.productCard {
  margin: 5%;
  position: relative;
  cursor: pointer;
}

.productCard:hover .product-cart {
  opacity: 100;
  transition: 0.2s;
}

.product-cart {
  background-color: #fff;
  width: 30px;
  height: 30px;
  position: absolute;
  right: 5%;
  bottom: 20%;
  transition: 0.2s;
  cursor: pointer;
}

.product-cart {
  opacity: 0;
}

.product-info {
  display: grid;
  grid-template-columns: 3fr 1fr;
  grid-template-rows: 1fr 1fr;
  column-gap: 10px;
  margin: 20px 0 0 0;
}

.product-color-and-size {
  display: flex;
  flex-direction: row;
  margin: 5px 0 0 0;
}

.product-color-and-size > div {
  margin: 0 10px 0 0;
}

.pagination-controls {
  text-align: center;
  margin: 50px;
}

.pagination-controls a {
  color: #000;
}

.pagination-controls .prev a,
.pagination-controls .next a {
  margin: 0 20px;
  padding: 10px 20px;
  border: 1px solid #000;
  transition: 0.1s;
}

.pagination-controls .prev a:hover,
.pagination-controls .next a:hover {
  background-color: rgb(224, 224, 224);
}

.bold {
  font-weight: 600;
}

body {
  overflow-x: hidden;
}

@media (max-width: 768px) {
  .collection-products-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
  }

  .product-cart {
    opacity: 100;
    bottom: 40%;
  }
}

@media (max-width: 375px) {
  .collection-products-container {
    display: grid;
    grid-template-columns: 1fr;
  }
}

@media (min-width: 768px) {
  h2 {
    font-size: 6rem;
  }
  .collectionHero img {
    height: 350px;
    object-fit: cover;
    width: 100%;
  }
}
