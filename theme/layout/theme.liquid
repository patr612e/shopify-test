<!DOCTYPE html>
<html lang="{{- shop.locale -}}">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>{{- page_title -}}</title>

  {% comment %} Theme styles {% endcomment %}
  {{ 'theme.scss.css' | asset_url | stylesheet_tag }}

  {% comment %} Shopify JS dependencies {% endcomment %}
  {{ '//ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js' | script_tag }}
  {{ 'api.jquery.js' | shopify_asset_url | script_tag }}

  {{ content_for_header }}
</head>
<body>

  {%- include 'mini-cart' -%}

  <main class="main" role="main">{{ content_for_layout }}</main>

  {% comment %} Theme scripts {% endcomment %}
  {{ 'theme.js' | asset_url | script_tag }}

</body>
</html>
